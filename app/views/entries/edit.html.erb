<%= form_for :entry, url: entry_path(@entry), method: :patch do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>
        <ul>
          <% @entry.errors.full_messages.each do |err| %>
